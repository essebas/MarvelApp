<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_black</item>
        <item name="colorPrimaryVariant">@color/primary_black_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_red</item>
        <item name="colorSecondaryVariant">@color/secondary_red_dark</item>
        <item name="colorOnSecondary">@color/text_on_primary_secondary</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="searchViewStyle">@style/Theme.SearchView</item>
    </style>

    <style name="Theme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:background">@color/primary_black_light</item>
        <item name="searchIcon">@android:drawable/ic_search_category_default</item>
    </style>

</resources>