<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/charactersFragment">

    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.zebas2.marvelapp.presentation.fragment.CharactersFragment"
        android:label="fragment_characters"
        tools:layout="@layout/fragment_characters">
        <action
            android:id="@+id/action_charactersFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment" />
        <action
            android:id="@+id/action_charactersFragment_to_characterDetailWebViewFragment"
            app:destination="@id/characterDetailWebViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.zebas2.marvelapp.presentation.fragment.CharacterDetailFragment"
        android:label="fragment_character_detail"
        tools:layout="@layout/fragment_character_detail">
        <argument
            android:name="selected_character"
            app:argType="com.zebas2.marvelapp.data.model.Character" />
    </fragment>
    <fragment
        android:id="@+id/characterDetailWebViewFragment"
        android:name="com.zebas2.marvelapp.presentation.fragment.CharacterDetailWebViewFragment"
        android:label="fragment_character_detail_web_view"
        tools:layout="@layout/fragment_character_detail_web_view" >
        <argument
            android:name="selected_character"
            app:argType="com.zebas2.marvelapp.data.model.Character" />
    </fragment>
</navigation>