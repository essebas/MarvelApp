<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_white</item>
        <item name="colorPrimaryVariant">@color/primary_white_light</item>
        <item name="colorOnPrimary">@color/text_on_secondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_red</item>
        <item name="colorSecondaryVariant">@color/secondary_red_light</item>
        <item name="colorOnSecondary">@color/text_on_secondary_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--<item name="android:searchViewStyle" tools:targetApi="l">@color/primary_white_dark</item>-->
        <!-- Customize your theme here. -->
        <item name="searchViewStyle">@style/Theme.SearchView</item>
    </style>

    <style name="Theme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/text_on_secondary_secondary</item>
        <item name="android:background">@color/primary_white_dark</item>
    </style>
</resources>